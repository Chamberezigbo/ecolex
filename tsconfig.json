{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",

    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["app.ts", "res/**/*"],
  "exclude": ["node_modules", "dist"]
}
