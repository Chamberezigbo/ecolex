// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Admin {
  id        Int      @id @default(autoincrement())
  schoolId  Int?
  campusId  Int? // Optional, since admins might not always belong to a campus
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255) // Ensure unique emails
  password  String   @db.VarChar(255)
  steps     Int      @default(0) // Tracks the steps for the admin
  role      Role
  createdAt DateTime @default(now()) @db.Timestamp

  // Relationships
  school School? @relation(fields: [schoolId], references: [id])
  campus Campus? @relation(fields: [campusId], references: [id])

  @@map("admins")
}

enum Role {
  super_admin
  school_admin
}

model School {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(255) // Add @unique here
  prefix      String   @db.VarChar(10)
  logoUrl     String?  @db.VarChar(255)
  stampUrl    String?  @db.VarChar(255)
  email       String?  @db.VarChar(255)
  phoneNumber String?  @db.VarChar(50)
  address     String?  @db.Text
  createdAt   DateTime @default(now()) @db.Timestamp

  campuses Campus[]
  admins   Admin[]
  Class    Class[]
  Staff    Staff[] 
  Student  Student[]
  Subject  Subject[]

  @@map("schools")
}

model Token {
  id         Int      @id @default(autoincrement())
  email      String   @unique @db.VarChar(255) // Unique key to ensure no duplicate email tokens
  uniqueKey  String   @unique @db.VarChar(255) // Unique key for token generation/validation
  status     String?  @db.VarChar(50)
  schoolName String   @db.VarChar(255) // School name associated with the token
  createdAt  DateTime @default(now()) // Timestamp for when the token was created

  @@map("tokens") // Maps to a table named `tokens`
}

model Campus {
  id          Int      @id @default(autoincrement())
  schoolId    Int
  name        String   @db.VarChar(255)
  address     String?  @db.Text
  phoneNumber String?  @db.VarChar(50)
  email       String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @db.Timestamp

  @@unique([schoolId, name]) // ðŸ”’ Prevent same campus name for same school

  school  School    @relation(fields: [schoolId], references: [id])
  admins  Admin[]
  Class   Class[]
  Staff   Staff[]
  Student Student[]
  Subject Subject[]
  TeacherAssignments TeacherAssignment[] // âœ… added

  @@map("campuses")
}

model Class {
  id          Int          @id @default(autoincrement())
  schoolId    Int
  campusId    Int?
  name        String
  customName  String?
  staffId   Int? // Optional, in case a class is created without a teacher assigned
  createdAt   DateTime     @default(now())
  school      School       @relation(fields: [schoolId], references: [id])
  campus      Campus?      @relation(fields: [campusId], references: [id])
  staff       Staff?     @relation(fields: [staffId], references: [id])
  classGroups ClassGroup[] // One-to-many relation with ClassGroup
  students    Student[] // One-to-many relation with Student

  assignments TeacherAssignment[] // Teachers teaching in this class

  ContinuousAssessment ContinuousAssessment[]
  Exam                 Exam[]

  // Optionally, add a unique constraint for name, school, and campus
  @@unique([name, schoolId, campusId])
  @@map("classes") // Maps the model to the "classes" table in the database
}

model ClassGroup {
  id        Int      @id @default(autoincrement())
  classId   Int
  name      String
  createdAt DateTime @default(now())
  class     Class    @relation(fields: [classId], references: [id])

  students  Student[] // âœ… back-relation (one group -> many students)
}

model Staff {
  id          Int       @id @default(autoincrement())
  schoolId    Int
  campusId    Int?
  name        String
  email       String?   @unique
  phoneNumber String?
  address     String?
  duty        String?   // e.g., "Teacher", "Accountant", "Cleaner"
  nextOfKin   String?
  dateEmployed DateTime?
  payroll     Decimal?  // salary or payroll reference
  createdAt   DateTime  @default(now())
  registrationNumber  String    @unique @db.VarChar(50)

  school  School  @relation(fields: [schoolId], references: [id])
  campus  Campus? @relation(fields: [campusId], references: [id])
  classes Class[] // if staff is a teacher, they can have classes
  assignments   TeacherAssignment[] // All class+subject+campus teaching assignments

  @@unique([schoolId, registrationNumber])
  @@map("staffs")
}

model Student {
  id          Int          @id @default(autoincrement())
  schoolId    Int
  campusId    Int?
  classId     Int    

  name           String
  surname        String
  otherNames     String
  gender         String?      @db.VarChar(10)
  dateOfBirth    String?
  guardianName   String?
  guardianNumber String?
  lifestyle      String?
  session        String
  email          String? 

  classGroupId Int? // âœ… optional since not all students must have a group
  classGroup   ClassGroup? @relation(fields: [classGroupId], references: [id])
  // âœ… NEW: Registration Number Field
  registrationNumber String   @unique @db.VarChar(50)

  // âœ… NEW: Unique constraint for registration number per school
  @@unique([schoolId, registrationNumber])
  @@map("students")

  createdAt   DateTime     @default(now())
  school      School       @relation(fields: [schoolId], references: [id])
  campus      Campus?      @relation(fields: [campusId], references: [id])
  class       Class        @relation(fields: [classId], references: [id])
  CAResult    CAResult[]
  ExamResult  ExamResult[]
}

model Subject {
  id        Int      @id @default(autoincrement())
  schoolId  Int
  campusId  Int?
  name      String   @db.VarChar(255) // Subject name (e.g., "Mathematics")
  code      String?  @db.VarChar(50) // Unique subject code (optional)
  createdAt DateTime @default(now())

  school                School                 @relation(fields: [schoolId], references: [id])
  campus                Campus?                @relation(fields: [campusId], references: [id])
  assignments           TeacherAssignment[] // Who teaches this subject (and where)
  continuousAssessments ContinuousAssessment[]
  exams                 Exam[]

  @@map("subjects")
}


model TeacherAssignment {
  id        Int      @id @default(autoincrement())
  staffId   Int
  classId   Int?     // Optional classId
  subjectId Int?     // Optional subjectId
  campusId  Int?     // Optional campusId
  assignedAt DateTime @default(now())

  staff   Staff   @relation(fields: [staffId], references: [id])
  class   Class?  @relation(fields: [classId], references: [id])
  subject Subject? @relation(fields: [subjectId], references: [id])
  campus  Campus? @relation(fields: [campusId], references: [id])

  @@index([staffId, classId, subjectId, campusId], name: "TeacherAssignment_unique") // Unique index
  @@map("teacher_assignments")
}


model ContinuousAssessment {
  id        Int      @id @default(autoincrement())
  classId   Int
  subjectId Int?
  name      String   @db.VarChar(50) // e.g., "CA1", "CA2"
  // weightage Decimal? Weightage of this CA towards the final grade
  maxScore  Int
  createdAt DateTime @default(now())

  class     Class      @relation(fields: [classId], references: [id])
  subject   Subject?    @relation(fields: [subjectId], references: [id])
  caResults CAResult[]

  @@unique([classId, name])
  @@map("continuous_assessments")
}

model CAResult {
  id        Int      @id @default(autoincrement())
  studentId Int
  caId      Int
  score     Decimal // Store CA score
  createdAt DateTime @default(now())

  student Student              @relation(fields: [studentId], references: [id])
  ca      ContinuousAssessment @relation(fields: [caId], references: [id])

  @@map("ca_results")
}

model Exam {
  id        Int      @id @default(autoincrement())
  classId   Int
  subjectId Int?
  name      String   @db.VarChar(50) // e.g., "Midterm", "Final"
  weightage Decimal? // Weightage in the final grade
  maxScore  Int
  createdAt DateTime @default(now())

  class       Class        @relation(fields: [classId], references: [id])
  subject     Subject?      @relation(fields: [subjectId], references: [id])
  examResults ExamResult[]

  @@unique([classId, name]) // âœ… prevents duplicate exams per class

  @@map("exams")
}

model ExamResult {
  id        Int      @id @default(autoincrement())
  studentId Int
  examId    Int
  score     Decimal // Store Exam score
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id])
  exam    Exam    @relation(fields: [examId], references: [id])

  @@map("exam_results")
}
