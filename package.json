{
  "name": "ecolex",
  "version": "1.0.0",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/app.js",
    "dev": "nodemon --watch 'res/**/*.ts' --watch 'res/**/*.js' --watch 'app.ts' --exec 'ts-node' app.ts",
    "build": "npm run prisma:generate && tsc -p tsconfig.json",
    "build:full": "npm install && npm run prisma:generate && npm run prisma:deploy",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev --name",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "postinstall": "prisma generate"
  },
  "author": "chamberezigbo",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "winston": "^3.17.0"
  }
}
